{{! list comments made by the user}}

<div class="container body-content">
    <div class="row">
    <form class="form-inline">
        {{! list user details: email and fullName }}

        <div class="well">
            <div class="form-group form-inline">
                <label class="col-md-4 control-label" for="userEmail">Email:</label><input type="text" class="form-control" id="userEmail" placeholder="Email" value="{{email}}" name="email" disabled>
            </div>
            <div class="form-group form-inline">
                <label class="col-md-4 control-label" for="userFullName">Full Name:</label><input type="text" class="form-control" id="userFullName" placeholder="FullName" value="{{fullName}}" name="email" disabled>
            </div>
        </div>

    </form>
    </div>

    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{ this.title }}</h2>
                    </header>
                    <p>
                        {{ this.content }}
                    </p>
                    <p>
                        {{#each this.tags }}
                            <a class="btn btn-default btn-xs"
                               href="/tag/{{this.name}}">{{ this.name }}</a>
                        {{/each}}
                    </p>
                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/article/edit/{{this.id}}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="/article/delete/{{this.id}}">Delete &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
    <div class="row">
        {{! list comments made by user}}
    </div>
</div>